@{
    ViewData["Title"] = "Groups";
}
@model Gifts.Controllers.AccountController.LoginViewModel
<section class="bg-slate-400 w-1/2 m-auto p-2">
    <h1 class="text-xl mb-1">Login</h1>
    <hr>
    <form method="POST" asp-action="LoginSubmit">
        <div>
            <label class="block" asp-for="Username"></label>
            <input asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>
        <div>
            <label class="block" asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="bg-slate-500 p-2 mt-2 rounded-md">Submit</button>
    </form>
</section>
